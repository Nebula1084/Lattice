<resources>

    <!-- Base application theme. -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skyblue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">#000</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#000</item>
        <item name="android:textColorTertiary">#000</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="textAppearanceListItem">@style/LatticeTextAppearance</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="LatticeTextAppearance">
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CommonButton">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:background">@drawable/lattice_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/main_button_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginButton" parent="CommonButton">
        <item name="android:layout_width">@dimen/common_button_width</item>
    </style>

    <style name="CommonEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginEditText" parent="CommonEditText">
        <item name="android:ems">15</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PasswordEditText" parent="CommonEditText">
        <item name="android:ems">15</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextCommonInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_input_size</item>
    </style>

    <style name="TextAddOn" parent="TextCommonInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="TextInput" parent="TextCommonInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextEditInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_input_size</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="LatticeToolBar">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="main_menu_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/menuHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/menuSize</item>
    </style>

</resources>
