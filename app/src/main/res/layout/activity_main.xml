<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_wht_bhv"
                style="@style/MainButton"
                android:text="@string/white_behavior" />

            <Button
                android:id="@+id/btn_blk_bhv"
                style="@style/MainButton"
                android:text="@string/white_counter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_wht_cnt"
                style="@style/MainButton"
                android:text="@string/black_counter" />

            <Button
                android:id="@+id/btn_blk_cnt"
                style="@style/MainButton"
                android:text="@string/black_behavior" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_template"
            style="@style/LoginButton"
            android:text="模板" />

        <Button
            android:id="@+id/main_behavior"
            style="@style/LoginButton"
            android:text="记录" />

        <Button
            android:id="@+id/main_statistics"
            style="@style/LoginButton"
            android:text="统计" />

        <Button
            android:id="@+id/main_setting"
            style="@style/LoginButton"
            android:text="设置" />

    </LinearLayout>
</LinearLayout>